{
  "name": "live-guide",
  "version": "0.5.3",
  "description": "Generate style guides based on commented style sheets.",
  "author": {
    "name": "Tom Brremer",
    "email": "tom@tbremer.com"
  },
  "contributors": [],
  "bin": {
    "live-guide": "bin/app.js"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:readme",
    "watch": "npm run watch:css",
    "build:css": "myth assets/css/src/style.css assets/css/dist/app.css",
    "build:readme": "node scripts/build-readme.js",
    "watch:css": "watch 'npm run build' ./assets/css/src/"
  },
  "main": "index.js",
  "repository": {
    "tyupe": "git",
    "url": "https://github.com/tbremer/styleguider"
  },
  "bugs": {
    "url": "https://github.com/tbremer/styleguider/issues"
  },
  "keywords": [
    "scss",
    "styleguide",
    "sass",
    "css"
  ],
  "dependencies": {
    "babel-core": "^5.8.24",
    "chalk": "^1.1.1",
    "concat": "^1.0.0",
    "fs-extra": "^0.24.0",
    "glob": "^5.0.14",
    "handlebars": "^4.0.2",
    "highlight.js": "^8.8.0",
    "markdown": "^0.5.0",
    "marked": "^0.3.5",
    "normalize.css": "^3.0.3",
    "yargs": "^3.25.0"
  },
  "preferGlobal": true,
  "license": "MIT",
  "devDependencies": {
    "eslint": "^1.5.1",
    "myth": "^1.5.0",
    "watch": "^0.16.0"
  }
}
